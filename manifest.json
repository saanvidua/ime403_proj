{
  "manifest_version": 3,
  "name": "Evergreen - Your Productivity Garden",
  "version": "1.0",
  "description": "Block distractions, track productivity, and grow a virtual garden!",
  "permissions": ["storage", "activeTab", "tabs", "windows", "alarms"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/monstera_tsp.png"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "run_at": "document_start"
      }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
      {
          "resources": ["pictures/backgrounds.jpg"],
          "matches": ["<all_urls>"]
      }
  ]
}
